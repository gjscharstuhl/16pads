function getnote(n)
local(s)
(
  #s="";
  kruis=0;
  note=notenames[n];
  octave=floor(n/12)-1;
  note>=100 ?(note-=1000;kruis=1;);
  sprintf(#s," %c",note);
  kruis ? strcat(#s,"#");
  sprintf(str," %d %d",octave,n);
  strcat(#s,str);
  #s;
);


function initnotenames()
