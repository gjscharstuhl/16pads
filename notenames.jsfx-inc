

@init



function notename_notes()
local(i,sn)
(
  i=0;
  sn='A';
  loop(12,
  notes[i]=sn;
  i==1 || i==4 || i==6 || i==9 || i==11 ? (notes[i]=sn+1000;sn+=1;):
  i==2 || i==7 ? sn+=1;
  i+=1;
  
  );

);

